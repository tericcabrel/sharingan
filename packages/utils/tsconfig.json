{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom"],
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "composite": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
