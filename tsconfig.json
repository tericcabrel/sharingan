{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "."
  },
  "include": [
    "apps/**/*.ts",
    "packages/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tmp",
    "packages/**/tests/**",
    "packages/**/dist/**"
  ],
  "references": [
    {
      "path": "./packages/utils"
    },
    {
      "path": "./packages/logger"
    },
    {
      "path": "./packages/database"
    },
    {
      "path": "./apps/core"
    }
  ]
}
